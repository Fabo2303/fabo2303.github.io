---
import socialMedia from "../data/socialMedia.json";
import IconManager from "../services/IconManager.astro";
---

<div id="social-media">
    {
        socialMedia.map(({ name, url }) => (
            <a
                id="social-link"
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Visit our ${name} profile`}
            >
                <div class="icon">
                    <IconManager name={name} size={24} />
                </div>
                <span id="social-name">{name}</span>
            </a>
        ))
    }
</div>

<style>
    #social-media {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    #social-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        color: white;
        background-color: rgb(10, 74, 134);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        font-size: 0.875rem;
        transition: all 0.2s ease-in-out;
        will-change: transform;
    }

    #social-link:hover,
    #social-link:focus {
        background-color: rgb(27, 104, 172);
        transform: scale(1.05);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        outline: none;
    }

    #social-link:active {
        transform: scale(0.98);
    }

    .icon {
        width: 24px;
        height: 24px;
    }

    #social-name {
        margin: 0;
        padding: 0;
        font-size: 1rem;
        font-weight: 500;
    }

    @media (max-width: 480px) {
        #social-media {
            gap: 0.75rem;
        }

        #social-link {
            padding: 0.2rem;
            max-width: calc(50% - 0.75rem);
        }

        #social-name {
            display: none;
        }

        .icon {
            width: 52px;
            height: 52px;
        }
    }

    @media (min-width: 481px) and (max-width: 768px) {
        #social-media {
            gap: 0.875rem;
        }

        #social-link {
            padding: 0.5rem 0.75rem;
            font-size: 0.8125rem;
        }

        #social-name {
            font-size: 0.875rem;
        }

        .icon {
            width: 32px;
            height: 32px;
        }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
        #social-media {
            gap: 1rem;
        }

        .icon {
            width: 28px;
            height: 28px;
        }
    }
</style>
