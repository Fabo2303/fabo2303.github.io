---
import skills from "../data/skills.json";
import IconManager from "../services/IconManager.astro";

interface Props {
    category: string;
}

const { category } = Astro.props as Props;

const filteredSkills = skills.filter((skill) => skill.category === category);
---

<div id="skill-container">
    {
        filteredSkills.map(({ name }) => (
            <div class="icon" title={name}>
                <IconManager name={name} />
            </div>
        ))
    }
</div>

<style>

    #skill-container {
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        gap: 10px;
        justify-content: center;
    }

    .icon {
        width: 40px;
        height: 40px;
    }

    @media (max-width: 480px) {
        .icon {
            width: 60px;
            height: 60px;
        }

        #skill-container {
            width: 80%;
        }
    }

    @media (min-width: 481px) and (max-width: 768px) {
        .icon {
            width: 50px;
            height: 50px;
        }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
        .icon {
            width: 45px;
            height: 45px;
        }
    }
</style>
